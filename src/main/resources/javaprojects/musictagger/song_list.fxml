<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>

<Stage minHeight="55.0" minWidth="250.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javaprojects.musictagger.SongListController">
    <scene>
        <Scene>
         <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0">
            <children>
               <Label fx:id="InfoLabel" text="Song List : 30 Items" />
               <ScrollPane hbarPolicy="NEVER" hmax="0.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                  <content>
                     <VBox fx:id="ScrollingVBox" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" />
                  </content>
               </ScrollPane>
               <HBox alignment="CENTER">
                  <children>
                     <Button mnemonicParsing="false" onAction="#OnClear" text="Clear" />
                     <Pane prefHeight="26.0" prefWidth="10.0" />
                     <Button mnemonicParsing="false" onAction="#OnDownload" text="Download" />
                     <Pane prefHeight="26.0" prefWidth="10.0" />
                     <Button cancelButton="true" mnemonicParsing="false" onAction="#OnCancel" text="Cancel" />
                  </children>
               </HBox>
            </children></VBox>
        </Scene>
    </scene>
</Stage>
